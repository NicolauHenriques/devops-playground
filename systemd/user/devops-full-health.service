[Unit]
Description=DevOps Playground - Full Health Check (oneshot)

[Service]
Type=oneshot
WorkingDirectory=%h/devops-playground

EnvironmentFile=%h/.config/devops-playground/devops-playground.env

ExecStart=%h/devops-playground/full_health.sh --quiet

# Optional: keep output in journal
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target
